@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!--Botón abre modal-->
<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ejemploModal">
    Abrir modal
</button>

<!--Modal-->


<div class="modal fade" id="ejemploModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Hola, soy un modal</h5>
                <button type="button" class="btn-close"></button>
            </div>
            <div class="modal-body">
                <p>Este es un pequeño formulario</p>
                <form>
                    <div class="mb-3">
                        <label class="form-check lable">Nombre</label>
                        <input type="text" class="form-control" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button class="btn btn-primary" data-bs-dismiss="modal">Guardar</button>
            </div>
        </div>
    </div>
</div>